                            "$ref": "#/definitions/UserLogin"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "user registered successfully"
                    },
                    "400": {
                        "description": "Bad Request ,Invalid input"
                    }
                }
            }
        },
        "/book": {
            "post": {
                "tags": [
                    "Book"
                ],
                "summary": "Add a new book",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "Book",
                        "description": "book object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Book"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": " Note inserted successfully"
                    },
                    "400": {
                        "description": "Bad Request ,Invalid input"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "deprecated": false
            }
        },
        "/books": {
            "get": {
                "tags": [
                    "Book"
                ],
                "summary": "get all Books available",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "retirved successfully"
                    },
                    "500": {
                        "description": "internal server error"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "deprecated": false
            }
        },
        "/book/{bookId}": {
            "post": {
                "tags": [
                    "Book"
                ],
                "summary": "update a existing book detatil ",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "bookId",
                        "description": "id for Book that need to be update",
                        "type": "string",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "book updated successfully with input id"
                    },
                    "404": {
                        "description": "book not found with input id"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "deprecated": false
            }
        },
        "/deleteBook/{bookId}": {
            "delete": {
                "tags": [
                    "Book"
                ],
                "summary": "delete book ",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "bookId",
                        "description": "id for Book that need to be deleted",
                        "type": "string",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "book deleted successfully with input id"
                    },
                    "404": {
                        "description": "book not found with input id"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "deprecated": false
            }
        },
        "/book/addtobag/{bookId}": {
            "post": {
                "tags": [

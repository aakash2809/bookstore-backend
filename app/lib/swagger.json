                ],
                "summary": " add book to cart",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "bookId",
                        "description": "id for Book that need to be update",
                        "type": "string",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Book added to cart successfully"
                    },
                    "404": {
                        "description": "book not found with input id"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "deprecated": false
            }
        }
    },
    "securityDefinitions": {
        "JWT": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "definitions": {
        "UserRegistration": {
            "type": "object",
            "required": [
                "firstName",
                "lastName",
                "email",
                "password",
                "confirmPassword"
            ],
            "properties": {
                "firstName": {
                    "type": "string",
                    "example": "Rahul"
                },
                "lastName": {
                    "type": "string",
                    "example": "Sahu"
                },
                "email": {
                    "type": "string",
                    "example": "sahurahul@gmail.com"
                },
                "password": {
                    "type": "string",
                    "example": "Pattern@35"
                },
                "confirmPassword": {
                    "type": "string",
                    "example": "Pattern@35"
                }
            }
        },
        "UserLogin": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "sahurahul@gmail.com"
                },
                "password": {
                    "type": "string",
                    "example": "Pattern@35"
                }
            }
        },
        "Book": {
            "type": "object",
            "required": [
                "author",
                "title",
                "quantity",
                "price",
                "description",
                "image"
            ],
            "properties": {
                "author": {
                    "type": "string",
                    "example": "Chetan Bhagat"
                },
                "title": {
                    "type": "string",
                    "example": "The Girl in Room 105"
                },
                "quantity": {
                    "type": "number",
                    "example": 12
                },
                "price": {
                    "type": "number",
                    "example": 193
                },
                "description": {
                    "type": "string",
                    "example": "Hi I'm Keshavand my life is screwed. I hate my job and my"
                },
                "image": {
                    "type": "string",
                    "example": "http://books.google.com/books/content?id=GHt_uwEACAAJ&printsec=frontcover&img=1&zoom=5"
                }
            }
        }
    }
}